{
	"type": "origins:multiple",
	"callback":{
		"type": "origins:action_on_callback",
		"entity_action_chosen": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "tag @s add hexhunter",
					"permission_level": 4
				},
				{
					"type": "origins:execute_command",
					"command": "effect give @s minecraft:instant_health 1 0 true",
					"permission_level": 4
				}
			]
		},
		"entity_action_added": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "tag @s add hexhunter",
					"permission_level": 4
				}
			]
		},
		"entity_action_respawned": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "tag @s add hexhunter",
					"permission_level": 4
				},
				{
					"type": "origins:execute_command",
					"command": "effect give @s minecraft:instant_health 1 0 true",
					"permission_level": 4
				}
			]
		},
		"entity_action_removed": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "tag @s remove hexhunter",
					"permission_level": 4
				}
			]
		},
		"execute_chosen_when_orb": true,
		"hidden": true
	},
	"basespeed": 
	{
		"type": "origins:attribute",
		"update_health": true,
		"modifiers": {
			"attribute": "minecraft:generic.movement_speed",
			"operation": "multiply_total",
			"value": 0.1
		},
		"name": "Speedy",
		"description": "Your speed increases by 10%."
	},
	"soul_destroy":
	{
		"type": "origins:target_action_on_hit",
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "resource change @s apocalypse:hexblade/hexblade_resource_souls -1",
					"permission_level": 4
				}
			]
		},
		"cooldown": 15,
		"hud_render": {
			"should_render": false
		},
		"hidden": true
	},
	"projectile_damage": 
	{
		"type": "origins:modify_projectile_damage",
		"target_condition": {
			"type": "origins:or",
			"conditions": [
				{
					"type": "origins:entity_type",
					"entity_type": "minecraft:player",
					"inverted": true
				},
				{
					"type": "origins:entity_type",
					"entity_type": "minecraft:player",
					"inverted": false
				}
			]
		},
		"modifier": {
			"operation": "multiply_total",
			"value": 0.1
		},
		"hidden": true
	},
	"name": "The Hex Hunt",
	"description": "For following the Hex Hunt decree, you gain the following benefits:\n \n- Your movement speed increases by 10%\n \n- You deal 10% more damage with projectiles.\n \n- You deal double damage to barriers protecting hexblades."
}